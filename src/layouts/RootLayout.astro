---
import RootHead from '../components/RootHead.astro';
import RootContainer from '../components/RootContainer.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import { SITE_DATA } from '../lib/constants';

const { title, description } = Astro.props;
---

<html
	lang={SITE_DATA.language}
	class='scroll-smooth'>
	<RootHead
		title={title}
		description={description}
	/>
	<body class='cursor-default select-none bg-0 text-1000 antialiased dark:bg-950 dark:text-0'>
		<RootContainer>
			<Header />
			<main class='mb-auto'>
				<slot />
			</main>
			<Footer />
		</RootContainer>
	</body>
</html>
