---
import type { Page } from 'astro';

type Props = { page: Page };

const {
	page: {
		currentPage,
		lastPage,
		url: { prev, next },
	},
} = Astro.props;
---

<div class='space-y-2 pb-8 pt-6 md:space-y-5'>
	<nav class='flex justify-between'>
		{
			!prev && (
				<button
					class='cursor-auto disabled:opacity-50'
					disabled>
					Previous
				</button>
			)
		}
		{
			prev && (
				<a
					href={prev}
					rel='prev'>
					Previous
				</a>
			)
		}
		<span>
			{currentPage} of {lastPage}
		</span>
		{
			!next && (
				<button
					class='cursor-auto disabled:opacity-50'
					disabled>
					Next
				</button>
			)
		}
		{
			next && (
				<a
					href={next}
					rel='next'>
					Next
				</a>
			)
		}
	</nav>
</div>
