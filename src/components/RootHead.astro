---
import { ViewTransitions } from 'astro:transitions';

import { SITE_DATA } from '../lib/constants';
import '../styles/global.css';

interface Props {
	title: string;
	description: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;
---

<head>
	<!-- Global Metadata -->
	<meta
		charset='UTF-8'
		lang={SITE_DATA.language}
	/>
	<link
		rel='icon'
		type='image/svg+xml'
		href='/favicon.svg'
	/>
	<meta
		name='viewport'
		content='width=device-width,height=device-height,viewport-fit=cover'
	/>
	<meta
		name='viewport'
		content='initial-scale=1.0,user-scalable=no,maximum-scale=1.0,minimum-scale=1.0'
	/>
	<link
		rel='canonical'
		href={canonicalURL}
	/>

	<!-- Fonts -->
	<link
		rel='preconnect'
		href='https://fonts.googleapis.com'
	/>
	<link
		rel='preconnect'
		href='https://fonts.gstatic.com'
		crossorigin
	/>

	<link
		href='https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap'
		rel='stylesheet'
		crossorigin
	/>

	<!-- Primary Meta Tags -->
	<meta
		name='description'
		content={description}
	/>
	<title>{title}</title>

	<ViewTransitions />
</head>
